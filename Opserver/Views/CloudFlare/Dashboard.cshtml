@using StackExchange.Opserver.Data.CloudFlare
@using StackExchange.Opserver.Views.CloudFlare
@model DashboardModel
@{
    Layout = "~/Views/Shared/Master.cshtml";
    this.SetPageTitle("CloudFlare Dashboard");
    this.SetTopNodes(RailgunInstance.AllInstances, "Railguns");
}
@section head {
    <script>
        $(function() {
            Status.Dashboard.init({ refresh: 30 });
        });
    </script>
}
@helper TabLink(DashboardModel.Views view, string href, string name)
{
    <li class="@(Model.View == view ? "active" : null)"><a href="@href">@name</a></li>
}
<ul class="nav nav-tabs nav-tabs-right">
    @TabLink(DashboardModel.Views.DNS, "/cloudflare/dns", "DNS")
    @TabLink(DashboardModel.Views.Railgun, "/cloudflare/railgun", "Railgun")
</ul>
@RenderBody()
