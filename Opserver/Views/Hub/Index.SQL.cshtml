@using StackExchange.Opserver.Data.SQL
<div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">SQL</div>
        <div class="panel-body">
            @{
                var instnanceCount = SQLInstance.AllInstances.Count;
                var agCount = SQLCluster.AllClusters.SelectMany(c => c.AvailabilityGroups).Count();
                var dbCount = SQLInstance.AllInstances.Sum(i => i.Databases.Data?.Count ?? 0);
            }
            <div class="col-md-4">
                <div class="circle-percent" data-pct="100">
                    <svg width="100" height="100" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <circle r="45" cx="50" cy="50" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0" />
                        <circle class="bar" r="45" cx="50" cy="50" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0" />
                    </svg>
                    <div class="circle-label">@instnanceCount.ToComma()<p>@instnanceCount.Pluralize("Instance", false)</p></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="circle-percent col-md-4" data-pct="100">
                    <svg width="100" height="100" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <circle r="45" cx="50" cy="50" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0" />
                        <circle class="bar" r="45" cx="50" cy="50" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0" />
                    </svg>
                    <div class="circle-label">@agCount.ToComma()<p>@agCount.Pluralize("AG", false)</p></div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="circle-percent col-md-4" data-pct="100">
                    <svg width="100" height="100" viewPort="0 0 100 100" version="1.1" xmlns="http://www.w3.org/2000/svg">
                        <circle r="45" cx="50" cy="50" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0" />
                        <circle class="bar" r="45" cx="50" cy="50" fill="transparent" stroke-dasharray="565.48" stroke-dashoffset="0" />
                    </svg>
                    <div class="circle-label">@dbCount.ToComma()<p>@dbCount.Pluralize("Database", false)</p></div>
                </div>
            </div>
            <table class="table table-super-condensed table-striped col-md-12">
                @foreach (var c in SQLCluster.AllClusters)
                {
                    <tbody>
                    <tr>
                        <th>@c.Name</th>
                        <th>CPU</th>
                        <th>Mem</th>
                        <th>DBs</th>
                        <th>Batches</th>
                    </tr>
                    @foreach (var i in c.Nodes)
                    {
                        <tr class="@i.RowClass()@(i.IsAllAGsPrimary ? " info" : null)">
                            <td>@i.IconSpan() <a href="~/sql/instance?node=@i.Name.UrlEncode()">@i.Name</a></td>
                            <td><img src="~/graph/sql/cpu/spark?node=@i.Name&time=@DateTime.UtcNow.ToString("yyyy-MM-dd")" width="100" height="16"/></td>
                            @SQLHelpers.MemoryCell(i, 0)
                            <td>@SQLHelpers.HealthDescription(i, i.Databases.SafeData(true))</td>
                            @SQLHelpers.BatchesCell(i)
                        </tr>
                    }
                    </tbody>
                }
                <tbody>
                <tr>
                    <th>Standalone</th>
                    <th>CPU</th>
                    <th>Mem</th>
                    <th>DBs</th>
                    <th>Batches</th>
                </tr>
                @foreach (var i in SQLInstance.AllStandalone)
                {
                    <tr class="@i.RowClass()">
                        <td>@i.IconSpan() <a href="~/sql/instance?node=@i.Name.UrlEncode()">@i.Name</a></td>
                        <td><img src="~/graph/sql/cpu/spark?node=@i.Name&time=@DateTime.UtcNow.ToString("yyyy-MM-dd")" width="100" height="16"/></td>
                        @SQLHelpers.MemoryCell(i, 0)
                        <td>@SQLHelpers.HealthDescription(i, i.Databases.SafeData(true))</td>
                        @SQLHelpers.BatchesCell(i)
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>